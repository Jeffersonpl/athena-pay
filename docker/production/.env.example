# ============================================
# Athena Pay - Production Environment Variables
# Copy this file to .env and fill in your values
# ============================================

# ============================================
# Domain Configuration
# ============================================
DOMAIN=athenapay.com.br
ACME_EMAIL=devops@athenapay.com.br

# ============================================
# Database Configuration
# ============================================
DB_USER=athena_admin
DB_PASSWORD=CHANGE_ME_STRONG_PASSWORD_HERE
DB_NAME=athena_db
DB_HOST=postgres
DB_PORT=5432

# Connection pool settings
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30

# ============================================
# Redis Configuration
# ============================================
REDIS_PASSWORD=CHANGE_ME_REDIS_PASSWORD_HERE
REDIS_HOST=redis
REDIS_PORT=6379

# ============================================
# Security Configuration
# ============================================

# JWT Settings (use strong random secrets)
JWT_SECRET=CHANGE_ME_USE_OPENSSL_RAND_BASE64_64
JWT_ALGORITHM=RS256
JWT_EXPIRY_HOURS=24

# Encryption key for PII (32 bytes base64 encoded)
ENCRYPTION_KEY=CHANGE_ME_USE_OPENSSL_RAND_BASE64_32

# API Keys
INTERNAL_API_KEY=CHANGE_ME_INTERNAL_API_KEY

# ============================================
# Traefik Configuration
# ============================================
# Generate with: htpasswd -nb admin password
TRAEFIK_AUTH=admin:$$apr1$$change_me

# ============================================
# Monitoring Configuration
# ============================================
GRAFANA_USER=admin
GRAFANA_PASSWORD=CHANGE_ME_GRAFANA_PASSWORD

# ============================================
# Service Scaling
# ============================================
WORKERS=4

# ============================================
# Feature Flags
# ============================================
ENABLE_PIX=true
ENABLE_CARDS=true
ENABLE_LOANS=true
ENABLE_BOLETO=true
ENABLE_WIRE=true

# ============================================
# External Integrations (for production)
# ============================================

# BACEN/SPI Integration (when ready)
# SPI_ENDPOINT=https://spi.bacen.gov.br
# SPI_CERTIFICATE_PATH=/certs/spi.pem
# SPI_KEY_PATH=/certs/spi.key

# Card Acquirer
# ACQUIRER=cielo
# ACQUIRER_MERCHANT_ID=
# ACQUIRER_API_KEY=

# SMS Provider
# SMS_PROVIDER=twilio
# TWILIO_ACCOUNT_SID=
# TWILIO_AUTH_TOKEN=
# TWILIO_PHONE_NUMBER=

# Email Provider
# EMAIL_PROVIDER=sendgrid
# SENDGRID_API_KEY=

# ============================================
# Sentry (Error Tracking)
# ============================================
# SENTRY_DSN=https://...@sentry.io/...
# SENTRY_ENVIRONMENT=production

# ============================================
# AWS (if using)
# ============================================
# AWS_ACCESS_KEY_ID=
